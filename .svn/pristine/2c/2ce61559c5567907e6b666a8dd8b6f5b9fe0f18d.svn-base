.m_forgetpwd{
    margin-top: 2em;
    width: 100%;
    height: 100%;
    background: #ffffff;
}
.m_forgetpwd_yz{
    font-size: 9pt;
    position: absolute;
    right: 0;
    width: 20%;
    top: 0;
    bottom: 0;
    height: 2.8em!important;
    color: #9c9c9c;
    background: #ffffff url("../image/login/forget_pwd_right.png") center center no-repeat;
    background-size: 15px 15px;
}
.m_forgetyzm_icon{
    display: block;
    float: left;
    width: 20px;
    height: 20px;
    padding-top:1em;
    background: url("../image/login/forgetpwd_pwd.png") center center no-repeat;
    background-size: 14px 14px;
}
.m_register_form form ul li:hover .m_forgetyzm_icon{
    background: url("../image/login/forgetpwd_pwd01.png") center center no-repeat;
    background-size: 14px 14px;
}
.m_forgetpwd_items{
    line-height: 3em;
    margin-top: 2em;
    text-align: center;
    color: #9c9c9c;
    padding-left: 20px;


}
.m_forgetpwd_items img{
    vertical-align: middle;
    width: 24px;
    padding-right: .5em;
}