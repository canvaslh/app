.teacher_team{
    width: 100%;
    height: 100%;
    background: #f5f5f5;
}
.teacher_img{
    background: #ffffff;
    padding: .5em;
    border-bottom: 1px solid #e1e1e1;
}
.teacher_team_one{
    width: 100%;
    overflow: auto;
    position: relative;
}
.teacher_team_img{
    width: 30%;
    float: left;
}
.teacher_team_img img{
    width: 100%;
}
.teacher_team_name{
    width: 70%;
    float: left;
    position: absolute;
    right: 0;
    bottom: 0;
    top:0;
    margin: auto;
}
.teacher_box{
    overflow: hidden;
    display: block;
    position: absolute;
    right: 0;
    bottom: 0;
    top:0;
    left: 0;
    margin: auto;

}
.teacher_name{
    width: 70%;
    float: left;
    display: block;
    position: absolute;
    right: 0;
    bottom: 0;
    top:10%;
    left: 0;
}
.teacher_name ul{
    padding-left: 1em;
    padding-right: 1em;


}
.teacher_name ul li{
    line-height: 2.5em;
    letter-spacing: .07em;
}
.teacher_name_{
    color: #313131;
    font-size: 13pt;
}
.teacher_cw{
    color: #767676;
    font-size: 10pt;
}
.teacher_share{
    width: 30%;
    display: block;
    float: left;
    text-align: center;
    position: absolute;
    right: 0;
    bottom: 0;
    top:20%;

}
.teacher_intro{
    margin-top: 10px;
    background: #ffffff;

}
.teacher_floor_tt{
    height: 35px;
    line-height: 35px;
    border-bottom: 1px solid #ececec;
    border-top: 1px solid #ececec;
    padding-left: 1em;
    padding-right: 1em;

}
.teacher_floor_tt h3{
    font-weight: normal;
    color: #767676;
    font-size: 15px;
    padding-left: 1.7em;



}

.teachers_intro{
    background: url("../image/teacher_team/1.png") left center no-repeat;
}
.teachers_ways{
    background: url("../image/teacher_team/3.png") left center no-repeat;
}
.teachers_classes{
    background: url("../image/teacher_team/4.png") left center no-repeat;
}
.teacher_vmore{
    font-size: 10pt;
    color: #767676;
}
.teacher_intro_cont{
    padding: 1em;
}
.teacher_intro_cont p{
    color: #141414;
    text-indent: 2em;
    text-align: justify;
    line-height: 1.5em;
}
.teacher_ways{
    margin-top: 10px;
    background: #ffffff;
}
.teacher_ways_cont{

}
.teacher_ways_cont_ul{
    overflow: auto;
    padding: .5em 1.5em .5em 1.5em;
}
.teacher_ways_cont_ul li{
    display: block;
    float: left;
    padding-left: .7em;
    padding-right: .8em;
    color: #1293dc;
    font-weight: 200;
    margin-right: 1em;
    font-family: Heiti TC Medium;
}
.teacher_hots{
    margin-top: 10px;
    background: #ffffff;
}